                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Search!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <!-- Table  -->
            <div class="x_panel">
                <div class="x_title">
                    <div class="col-md-6 col-sm-6 sol-xs-12">
                        <p style="margin-bottom: 2px;">
                            Số 1: SẢN PHẨM MỚI NHẤT
                        </p>
                        <p style="margin-bottom: 2px;">
                            Số 2: NHIỀU NGƯỜI TÌM NHẤT
                        </p>
                        <p style="margin-bottom: 2px;">
                            Số 3: SẢN PHẨM CHẤT LƯỢNG
                        </p>
                        <p style="margin-bottom: 2px;">
                            Số 4: CÓ GIÁ THUÊ RẺ NHẤT
                        </p>
                    </div>
                    <div class="col-md-6 col-sm-6 sol-xs-12">
                        <p style="margin-bottom: 2px;">
                            Số 5: SẢN PHẨM GẦN BẠN

                        </p>
                        <p style="margin-bottom: 2px;">
                            Số 6: RAO VẶT MIỄN PHÍ

                        </p>
                        <p style="margin-bottom: 2px;">
                            Số 7: SẢN PHẨM CHO TẶNG
                        </p>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">

                    <form method="post" action="./product_list" id="id4">

                        <div class="container">
                            <div class="row" style="margin-bottom: 20px;margin-top:25px;">

                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <!-- 3 dropdownlist to select CATEGORY -->
                                    <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                        <label class="control-label col-md-12 col-sm-12 col-xs-12">Chọn Main Category</label>
                                        <div class="col-md-12 col-sm-12 col-xs-12" id="dvMainCate">
                                            <select id="sltMainCate" onchange="mainCateOnChange(this)" class="form-control"><option value="-1">Lựa chọn Main Category<!-- option --></option><option value="4">Dụng cụ, thiết bị<!-- option --></option><option value="5">Xe - vận chuyển<!-- option --></option><option value="6">Bất động sản<!-- option --></option><option value="8">Sách, tranh, hoa<!-- option --></option><option value="9">Thời trang - Phụ kiện<!-- option --></option><option value="11">Sự kiện, lễ hội<!-- option --></option><option value="14">Test<!-- option --></option></select>

                                        </div>
                                    </div>
                                    <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                        <label class="control-label col-md-12 col-sm-12 col-xs-12">Chọn Sub Category 1</label>
                                        <div class="col-md-12 col-sm-12 col-xs-12" id="dvSubCate1">
                                            <select id="sltSubCate1" onchange="subCate1OnChange(this)" class="form-control"><option value="-1">Lựa chọn Sub Category 1<!-- option --></option></select>

                                        </div>
                                    </div>
                                    <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                        <label class="control-label col-md-12 col-sm-12 col-xs-12">Chọn Sub Category 2</label>
