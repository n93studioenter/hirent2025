
@{
    ViewBag.Title = "CategorySub1";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="right_col" role="main" style="min-height: 700px;">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>QUẢN LÝ CATEGORY SUB 1</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Search!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <!-- Create new category -->
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Tạo Sub-1 mới</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br>
                        <form id="demo-form2" class="form-horizontal form-label-left">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Tên Category Sub-1 <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="hidden" id="ipSubCate1ID" value="0" />
                                    <input type="text" id="ipSubCat1Name" required="required" class="form-control col-md-7 col-xs-12 mycontrol">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Category Sub-1 Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="ipSubCat1Nameen" required="required" class="form-control col-md-7 col-xs-12 mycontrol">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Mô tả nhanh <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="ipSubCat1Desc" name="last-name" required="required" class="form-control col-md-7 col-xs-12 mycontrol">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Thuộc Main Category</label>
                                <div class="col-md-6 col-sm-6 col-xs-12" id="dvMainCate">
                                    <select id="sltMainCate" onchange="mainCateOnChange(this)" class="form-control">
                                        <option value="-1">Lựa chọn Main Category<!-- option --></option>
                                        @if (ViewBag.ListCatemain != null)
                                        {
                                            foreach (var item in ViewBag.ListCatemain)
                                            {
                                                <option value="@item.MainCateID">@item.MainCateName</option>
                                            }
                                        }
                                    </select>

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="sort-arrange">
                                    Sort thứ tự <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="number" id="ipSubCat1Sort" name="sort-arrange" required="required" class="form-control col-md-7 col-xs-12 mycontrol">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Kích hoạt</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div id="ipSubCat1Status" class="btn-group" data-toggle="buttons">
                                        <input type="radio" name="gender" id="ipSubCat1StatusEnable"> &nbsp; Enable &nbsp;
                                        <input type="radio" name="gender" id="ipSubCat1StatusDisable"> &nbsp; Disable &nbsp;

                                    </div>
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-primary" type="button">Hủy</button>
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button id="btnCreate" type="button" class="btn btn-success">Lưu</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div> <!-- /Create new category -->

            <div class="col-md-12 col-sm-12 col-xs-12">
                <!-- Table  -->
                <div class="x_panel">
                    <div class="x_title">
                        <h2>DANH SÁCH CATEGORY ĐANG CÓ</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="container">
                        <div class="row" style="margin-bottom:20px;">
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-6" style="padding-top: 8px;">Search theo Main Cate</label>
                                <div class="col-md-3 col-sm-3 col-xs-6">

                                    <div id="ContentPlaceHolder1_data_MainCate">
                                        <select class="form-control" onchange="DDLMainCate_Selected()" name="data_MainCate_filter" id="data_MainCate_filter">
                                            <option value="0"> Filter Main Category</option>
                                            @if (ViewBag.ListCatemain != null)
                                            {
                                                foreach (var item in ViewBag.ListCatemain)
                                                {
                                                    <option value="@item.MainCateID">@item.MainCateName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-6">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="ContentPlaceHolder1_dvSubCate1List" class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Tên Sub-1</th>
                                    <th>Tên Sub-1 by English</th>
                                    <th style="width:20%">Mô tả </th>
                                    <th>Thuộc MainCategory</th>
                                    <th>Tình trạng</th>
                                    <th>Ngày tạo</th>
                                    <th width="15%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="tbody">
                            </tbody>
                        </table>



                    </div>
                </div>
            </div>  <!-- /Table -->
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        loaddata(0);
        $('#datatable').DataTable();

    });
    function DDLMainCate_Selected() {
        loaddata($("#data_MainCate_filter").val());
    }
    function loaddata(id) {
        var param = {
            "MainCateID": id,
        }
        $.ajax({
            url: '/Admin/ProductCategory/loadCateSub1',
            data: param,
            dataType: 'html',
            type: 'GET',
            cache: false,
            success: function (result) {
                $("#tbody").html(result);
            }
        });
    }

    $("#btnCreate").click(function () {
        var isEmpty = false;
        //Check empty
        $('input.mycontrol').each(function () {
            var value = $(this).val();
            if (value == "") {
                alert("Vui lòng điền đầy đủ các thông tin!");
                $(this).focus();
                isEmpty = true;
                return false;
            }
        })
        //Save data
        if (isEmpty == false) {
            var param = {
                "SubCate1ID": $("#ipSubCate1ID").val(),
                "SubCate1Name": $("#ipSubCat1Name").val(),
                "Language": $("#ipSubCat1Nameen").val(),
                "SubCate1Desc": $("#ipSubCat1Desc").val(),
                "MainCateID": $("#sltMainCate").val(),
                "Sort": $("#ipSubCat1Sort").val(),
            }

            $.post("/Admin/ProductCategory/SaveDatasub1", { "data": "" + JSON.stringify(param) + "" }, function (result) {
                window.location.reload();
            });
        }
    });

    function Edit(SubCate1ID) {
        var param = {
            "SubCate1ID": SubCate1ID,
        }
        $.ajax({
            url: '/Admin/ProductCategory/GetValuesub1',
            data: param,
            dataType: 'html',
            type: 'GET',
            cache: false,
            success: function (result) {
                var obj = jQuery.parseJSON(result);
                $("#ipSubCate1ID").val(obj.SubCate1ID);
                $("#ipSubCat1Name").val(obj.SubCate1Name);
                $("#ipSubCat1Nameen").val(obj.Language);
                $("#ipSubCat1Desc").val(obj.SubCate1Desc);
                $("#sltMainCate").val(obj.MainCateID);
                $("#ipSubCat1Sort").val(obj.Sort);
            }
        });

    }
</script>